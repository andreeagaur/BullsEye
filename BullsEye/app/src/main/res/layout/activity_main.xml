<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/reset_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Reset Score" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/reset_score"
            android:layout_centerHorizontal="true"
            android:text="Put the slider as close to the number as possible" />

        <TextView
            android:id="@+id/random_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reset_score"
            android:layout_centerHorizontal="true"
            android:hint="Number" />


        <TextView
            android:layout_width="73dp"
            android:layout_height="34dp"
            android:layout_alignBottom="@+id/reset_score"
            android:layout_toLeftOf="@+id/score_counter"
            android:layout_toStartOf="@+id/score_counter"
            android:text="SCORE:" />

        <TextView
            android:id="@+id/score_counter"
            android:layout_width="73dp"
            android:layout_height="34dp"
            android:layout_alignBottom="@+id/reset_score"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:hint="000" />


        <TextView
            android:id="@+id/start_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/end_value"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="12dp"
            android:text="0" />

        <TextView
            android:id="@+id/end_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="117dp"
            android:text="100" />

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:max="100"
            android:progress="50"
            android:progressDrawable="@drawable/custom_progress"
            android:layout_alignParentLeft="true" />


        <TextView
            android:id="@+id/correct_hit"
            android:layout_width="261dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bulls_eye"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-70dp"
            android:text="BULLSEYE!"
            android:textAlignment="center"
            android:textSize="40dp"
            android:visibility="invisible" />

        <Button
            android:id="@+id/bulls_eye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="70dp"
            android:text="BULLSEYE" />
    </RelativeLayout>


</LinearLayout>